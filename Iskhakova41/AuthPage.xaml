<Page x:Class="Iskhakova41.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Iskhakova41"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" ></RowDefinition>
            <RowDefinition Height="auto" ></RowDefinition>
            <RowDefinition Height="auto" ></RowDefinition>
            <RowDefinition Height="auto" ></RowDefinition>
            <RowDefinition Height="auto" ></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" ></ColumnDefinition>
            <ColumnDefinition Width="Auto"  ></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <TextBlock Text="Логин" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10"></TextBlock>
        <TextBlock Text="Пароль" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10"></TextBlock>

        <StackPanel Name="CaptchaPanel" Orientation="Vertical" Grid.Row="3" Grid.Column="1" Visibility="Collapsed">
            <TextBlock Text="Введите капчу:" FontWeight="Bold" Margin="5"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Name="captchaOne" FontSize="22" TextDecorations="Strikethrough"/>
                <TextBlock Name="captchaTwo" FontSize="22" TextDecorations="Strikethrough" Margin="5,10,0,0"/>
                <TextBlock Name="captchaThree" FontSize="22" TextDecorations="Strikethrough"/>
                <TextBlock Name="captchaFour" FontSize="22" TextDecorations="Strikethrough" Margin="5,10,0,0"/>
            </StackPanel>
            <TextBox Name="CaptchaInput" Width="100" HorizontalAlignment="Center" Margin="10"/>
            </StackPanel>
            
            
        <TextBox Text="loginDH3fjd"  Name="Login" Grid.Row="0"  Grid.Column="1" Width="200" HorizontalAlignment="Left" Margin="10"></TextBox>
        <TextBox Text="U2hhd1" Name="Password" Grid.Row="1" Grid.Column="2"  Width="200" HorizontalAlignment="Left" Margin="10"></TextBox>
        
        <Button Name="ButtonLOgin" Content="Войти" Click="Button_Click"  Grid.Column="1" Grid.Row="4" Margin="10" HorizontalAlignment="Center"></Button>
            <Button Name="Gost" Content="Войти как гость" Click="Button_Click_1" Grid.Column="0" Grid.Row="4"  Margin="10" HorizontalAlignment="Center" ></Button>
        
        
        
        
    </Grid>
</Page>
